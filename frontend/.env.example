# API URL
# En desarrollo local: Dejar vacío para usar Vite proxy (/api → backend)
# En producción: Dejar vacío para usar Nginx proxy (/api → backend)
# NO poner dominio aquí, usar rutas relativas
VITE_API_URL=

# App Configuration
VITE_APP_NAME=CompilaTime
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Sistema de Registro Horario Profesional

# Environment
VITE_NODE_ENV=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_PWA=false

# External Services
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# Map Configuration (for location-based features)
VITE_GOOGLE_MAPS_API_KEY=

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Time Configuration
VITE_DEFAULT_TIMEZONE=Europe/Madrid
VITE_DEFAULT_LOCALE=es

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_PRIMARY_COLOR=#1E40AF
VITE_SUCCESS_COLOR=#10B981
VITE_WARNING_COLOR=#F59E0B
VITE_DANGER_COLOR=#EF4444

# Company Configuration
VITE_COMPANY_NAME=CompilaTime
VITE_COMPANY_EMAIL=support@compilatime.com
VITE_COMPANY_PHONE=+34 900 000 000
VITE_COMPANY_ADDRESS=Madrid, España

# Social Links
VITE_SUPPORT_URL=https://support.compilatime.com
VITE_DOCUMENTATION_URL=https://docs.compilatime.com
VITE_PRIVACY_URL=https://compilatime.com/privacy
VITE_TERMS_URL=https://compilatime.com/terms

# Development Only
VITE_MOCK_API=false
VITE_LOG_LEVEL=debug